extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/volume/updateVolume")
                input(type="hidden",name="id",value="#{volume._id}")
                .form-group
                    lable.col-sm-2.control-label(for="inputName") 云硬盘名字
                    .col-sm-3
                        input#inputName.form-control(type="text",name="name",value="#{volume.name}")
                .form-group
                    lable.col-sm-2.control-label(for="inputSize") 大小
                    .col-sm-3
                        input#inputSize.form-control(type="text",name="size",value="#{volume.size}")
                .form-group
                    .col-sm-offset-2.col-sm-2
                    button.btn-default(type="submit" ) 修改
